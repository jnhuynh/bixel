<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body text-center">
        {{game.area.name}}
        {{game.player.name}}
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    {{view "game" game=game}}
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <ul class="pager">
      <li class="previous"><a {{action "exitGame"}}>&larr; Exit</a></li>
    </ul>
  </div>
</div>
